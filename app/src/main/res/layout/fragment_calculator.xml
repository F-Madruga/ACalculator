<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.CalculatorFragment">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_visor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/middleGrey"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="80sp"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_last_expression"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/middleGrey"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="C"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="&lt;"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_division"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="/"
                    android:text="/"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_multiplication"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="*"
                    android:text="*"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="4"
                    android:text="4"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="5"
                    android:text="5"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="6"
                    android:text="6"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_subtration"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="-"
                    android:text="-"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="1"
                    android:text="1"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="2"
                    android:text="2"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="3"
                    android:text="3"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_addiction"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="+"
                    android:text="+"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="0"
                    android:text="0"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_dot"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/darkGrey"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:tag="."
                    android:text="."/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_equals"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="="/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>